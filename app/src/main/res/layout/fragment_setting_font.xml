<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout_setting_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/tv_default_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_font_name"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/rg_padding_left">
            <RadioButton
                android:id="@+id/rb_font_type"
                android:text="@string/text_font_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_font_type1"
                android:text="@string/text_font_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_font_type2"
                android:text="@string/text_font_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_font_type3"
                android:text="@string/text_font_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_font_size"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/rg_padding_left">
            <RadioButton
                android:id="@+id/rb_font_small"
                android:text="@string/text_font_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_font_normal"
                android:text="@string/text_font_size_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_font_large"
                android:text="@string/text_font_size_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <TextView
            android:layout_marginTop="@dimen/tv_default_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_font_color"/>
        <uz.shift.colorpicker.LineColorPicker
            android:id="@+id/color_picker_font"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/color_picker_height"
            android:layout_marginTop="@dimen/tv_default_margin_top"/>

    </LinearLayout>
</ScrollView>

